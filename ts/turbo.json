{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "build/**"
      ]
    },
    "fmt": {
      "dependsOn": [
        "^fmt"
      ]
    },
    "fmt:check": {  
      "dependsOn": [
        "^fmt:check"
      ]
    },
    "clean": {
      "cache": true
    },
    "install": {
      "cache": true
    },
    "check-types": {
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": [
        "^build",
        "build"
      ],
      "cache": false,
      "persistent": true
    }
  }
}
